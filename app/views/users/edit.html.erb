<h1>Edit user</h1>

<%= form_for(@user) do |f| %>
  <%= render 'fields', :f => f  %>
  <div class="actions">
    <%= f.submit "Save Settings" %>
  </div>
<% end %>


<div>
  <%= image_tag(avatar_url(@user,48)) %>
  <%= link_to "Change Profile Picture", "http://gravatar.com/emails"%>								  
</div>
